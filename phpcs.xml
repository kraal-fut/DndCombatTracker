<?xml version="1.0"?>
<ruleset name="Laravel PSR-12">
    <description>PSR-12 coding standard for Laravel projects.</description>

    <file>app</file>
    <file>config</file>
    <file>database</file>
    <file>routes</file>
    <file>tests</file>

    <exclude-pattern>*/vendor/*</exclude-pattern>
    <exclude-pattern>*/storage/*</exclude-pattern>
    <exclude-pattern>*/bootstrap/cache/*</exclude-pattern>
    <exclude-pattern>*/public/*</exclude-pattern>

    <arg name="colors"/>
    <arg value="p"/>

    <rule ref="PSR12"/>

    <!-- Disable some rules if they are too strict for Laravel -->
    <rule ref="Internal.Tokenizer.Exception">
        <type>error</type>
    </rule>

    <!-- Ignore missing namespace in migrations -->
    <rule ref="PSR1.Classes.ClassDeclaration.MissingNamespace">
        <exclude-pattern>database/migrations/*</exclude-pattern>
    </rule>

    <!-- Ignore side effects in tests and routes -->
    <rule ref="PSR1.Files.SideEffects.FoundWithSymbols">
        <exclude-pattern>tests/*</exclude-pattern>
        <exclude-pattern>app/Providers/*</exclude-pattern>
        <exclude-pattern>routes/*</exclude-pattern>
    </rule>
</ruleset>
